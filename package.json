{
  "name": "fishtrophy",
  "version": "1.0.0",
  "description": "Comprehensive platform for anglers in Romania",
  "private": true,
  "scripts": {
    "dev": "netlify dev",
    "dev:client": "cd client && npm run dev",
    "build": "npm run build:client",
    "build:client": "cd client && npm run build",
    "lint": "eslint client --ext .ts,.tsx --ignore-pattern '**/dist/**' --ignore-pattern '**/build/**' --ignore-pattern '**/node_modules/**'",
    "lint:fix": "npm run lint:fix:client",
    "lint:fix:client": "cd client && npm run lint:fix",
    "type-check": "npm run type-check:client",
    "type-check:client": "cd client && npm run type-check"
  },
  "devDependencies": {
    "@neondatabase/serverless": "^0.9.0",
    "@netlify/functions": "^2.8.2",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "netlify-cli": "^17.36.4",
    "prettier": "^3.3.3"
  },
  "engines": {
    "node": ">=20.0.0 <23.0.0"
  }
}
