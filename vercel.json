{
  "buildCommand": "cd client && npm install && npm run build",
  "outputDirectory": "client/dist",
  "installCommand": "cd client && npm install",
  "functions": {
    "api/**/*.ts": {
      "runtime": "nodejs20"
    },
    "api/**/*.tsx": {
      "runtime": "nodejs20"
    }
  },
  "routes": [
    {
      "src": "^/api/(.*)$",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*\\.(ico|png|svg|json|css|js))",
      "dest": "/$1"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "^(?!/api/).*",
      "dest": "/index.html"
    }
  ]
}
