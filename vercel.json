{
  "builds": [
    { "src": "client/package.json", "use": "@vercel/static-build", "config": { "distDir": "dist", "buildCommand": "corepack enable && pnpm --filter client build" } },
    { "src": "api/**/*.[tj]s", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "^/api/(.*)$", "dest": "/api/$1" },
    { "handle": "filesystem" },
    { "src": "^(?!/api/).*", "dest": "/index.html" }
  ]
}
